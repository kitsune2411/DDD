{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
