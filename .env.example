# ==========================================
# 1. APPLICATION CONFIG
# ==========================================
# Environment: 'development', 'production', atau 'test'
NODE_ENV=development
# Port aplikasi berjalan
PORT=3000
# Nama aplikasi (opsional, untuk log)
APP_NAME=my-ddd-app

# ==========================================
# 2. DATABASE CONFIG (MySQL)
# ==========================================
# Host: Gunakan '127.0.0.1' untuk local, atau 'db' jika via Docker
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=my_ddd_app
DB_USER=root
DB_PASS=

# Connection Pool (Optimasi performa query)
DB_POOL_MIN=2
DB_POOL_MAX=10

# Khusus Docker Compose (Initial Root Password)
# Hanya dipakai saat pertama kali container DB dibuat
DB_ROOT_PASS=secret_root_password

# ==========================================
# 3. REDIS CONFIG (Cache & Queue)
# ==========================================
# Host: Gunakan '127.0.0.1' untuk local, atau 'cache' jika via Docker
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASS=

# ==========================================
# 4. SECURITY (JWT & Auth)
# ==========================================
# Rahasia dapur token. Ganti dengan string acak panjang di production!
# Contoh generate: openssl rand -hex 32
JWT_SECRET=ganti_dengan_string_rahasia_yang_sangat_panjang_dan_rumit
# Durasi token valid (contoh: 1h, 7d, 30d)
JWT_EXPIRES_IN=1d

# ==========================================
# 5. LOGGING
# ==========================================
# Level log: 'debug' (banyak info) atau 'info' (production)
LOG_LEVEL=debug